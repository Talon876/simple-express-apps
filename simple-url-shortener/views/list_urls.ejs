<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>URL Shortener</title>
</head>
<body>
    <h1>URL Shortener Service</h1>
    <p>Displaying all <%= urls.length %> URLs</p>
    <table>
        <tr>
            <th>Short ID</th>
            <th>URL</th>
            <th># Visits</th>
        </tr>
        <% urls.forEach(url => { %>
            <tr>
                <td>
                    <a href="/url/<%= url.shortId %>"><%= url.shortId %></a>
                </td>
                <td><%= url.link %></td>
                <td><%= url.visitCount %></td>
            </tr>
        <% }) %>
    </table>
    <a href="/">Home</a>
    <% if (isElinksUser) { %>
        <p>
            <small>Nice Old School Browser!</small>
        </p>
    <% } %>
</body>
</html>
